<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:background="#ff231b00">
	<RelativeLayout android:id="@+id/episodes_header"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#ff000000" >
		
		<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/Episodes_title"
		android:textStyle="bold" android:paddingLeft="10dp" android:paddingTop="10dp"
		android:layout_toLeftOf="@+id/comment_button" android:layout_alignParentLeft="true"
		android:textSize="28sp" android:background="#FF000000"/>
		<TextView android:id="@+id/unlistened_eps" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:background="#FF000000"
		android:layout_below="@+id/title" android:paddingLeft="10dp"
		 android:textSize="17sp" />
		<TextView android:background="@drawable/gradient" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:layout_below="@id/unlistened_eps"/>
		<ImageButton android:id="@+id/comment_button" android:layout_centerVertical="true"
		android:layout_alignParentRight="true" android:src="@drawable/comment_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="#ff000000" android:onClick="startIdenticaActivity"/>
		
	</RelativeLayout>
	<ListView android:id="@android:id/list" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:paddingTop="5dp" 
		android:background="#ff231b00" android:layout_below="@+id/episodes_header"
		android:cacheColorHint="#ff231b00" android:divider="#00000000"
		android:dividerHeight="2dp" />
</RelativeLayout>
