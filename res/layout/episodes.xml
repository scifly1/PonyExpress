<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" >
	<RelativeLayout android:id="@+id/episodes_header"
		android:orientation="vertical" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#ff000000"
		android:layout_alignParentTop="true" >
		
		<ImageButton android:id="@+id/comment_button" android:paddingTop="2dp"
		android:layout_alignParentRight="true" android:src="@drawable/comment_button"
		android:layout_width="wrap_content" android:layout_height="wrap_content" 
		android:background="#ff000000" android:onClick="startIdenticaActivity"/>
		
		<TextView android:id="@+id/title" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/Episodes_title"
		android:textStyle="bold" android:paddingLeft="10dp" android:paddingTop="10dp"
		android:layout_toLeftOf="@+id/comment_button" android:layout_alignParentLeft="true"
		android:textSize="28sp" android:background="#FF000000"/>
		<TextView android:id="@+id/unlistened_eps" android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:background="#FF000000"
		android:layout_below="@+id/title" android:paddingLeft="10dp"
		 android:textSize="17sp" />
	</RelativeLayout>
	
	<LinearLayout android:id="@+id/episodes_body" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:layout_below="@+id/episodes_header"
	android:orientation="vertical">	
	<TextView android:id="@+id/gradient"
	android:background="@drawable/gradient" android:layout_height="wrap_content"
		android:layout_width="fill_parent" />
	<ListView android:id="@android:id/list" android:layout_width="wrap_content"
		android:layout_height="fill_parent" android:paddingTop="5dp" 
		android:background="#00000001" 
		android:cacheColorHint="#00000000" android:divider="#00000001"
		android:dividerHeight="2dp" />
	</LinearLayout>
</RelativeLayout>
