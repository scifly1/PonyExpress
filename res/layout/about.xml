	android:layout_width="fill_parent">

	<LinearLayout
		android:layout_width="fill_parent"
		android:layout_height="fill_parent">

		<TextView
			android:id="@+id/tv_about"
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:text="@string/about_message"
