<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/RelativeLayout01"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">
	<Button android:layout_below="@+id/TitleText" android:text="@string/play"
		android:layout_height="wrap_content" android:id="@+id/PlayButton"
		android:layout_width="wrap_content" android:layout_centerHorizontal="true" />
	<Button android:layout_below="@+id/TitleText"
		android:layout_toLeftOf="@+id/PlayButton" android:text="Rewind"
		android:layout_height="wrap_content" android:id="@+id/rewind"
		android:layout_width="wrap_content" />
	<Button android:layout_below="@+id/TitleText" android:text="Forward"
		android:layout_toRightOf="@+id/PlayButton" android:layout_height="wrap_content"
		android:id="@+id/fastforward" android:layout_width="wrap_content" />
	
</RelativeLayout>
